{
  "name": "pixiu",
  "displayName": "pixiu",
  "description": "You know, for silence",
  "version": "0.0.4",
  "publisher": "pixiu",
  "repository": "https://github.com/zpyoki/vscode",
  "license": "MIT",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:pixiu.helloWorld",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "icon": "favicon.png",
  "galleryBanner": {
    "color": "#ff3366",
    "theme": "dark"
  },
  "contributes": {
    "commands": [
      {
        "command": "pixiu.helloWorld",
        "title": "初始化"
      },
      {
        "command": "pixiu.nav",
        "title": "查看明天"
      },
      {
        "command": "pixiu.progress",
        "title": "显示进度条"
      }
    ],
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pixiu",
          "title": "貔貅",
          "icon": "./favicon.png"
        }
      ]
    },
    "views": {
      "pixiu": [
        {
          "id": "c1",
          "name": "超脱：踏天"
        },
        {
          "id": "c2",
          "name": "超脱：道无涯"
        },
        {
          "id": "c3",
          "name": "超脱：道源"
        },
        {
          "id": "c4",
          "name": "超脱：永恒"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "pixiu.nav",
          "group": "navigation"
        },
        {
          "when": "editorFocus",
          "command": "pixiu.progress",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "when": "editorFocus",
          "command": "pixiu.nav",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@vscode/test-electron": "^2.3.2"
  }
}
